<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_margin="5dp"
    android:gravity="center"
    android:layout_height="match_parent">
    <TextView android:id="@+id/search_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Diet Classification"
        android:background="#F8C471"
        android:textColor="#fff"
        android:textSize="30sp"
        android:gravity="center"
        />

    <TextView android:id="@+id/search_diet_detail"
        android:layout_below="@id/search_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Diet Detail"
        android:textSize="30sp"
        android:gravity="center"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_diet_detail"
        android:orientation="horizontal">

        <View android:layout_width="2dp" android:layout_height="match_parent"
            android:background="#fff"
            />

        <Button
            android:id="@+id/search_dialog_done"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight=".5"
            android:backgroundTint="#FF0000"
            android:text="Done"
            android:textColor="#fff" />

    </LinearLayout>


</RelativeLayout>